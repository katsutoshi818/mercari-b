.new-header
  = link_to '#' do
    %img.single_pict{src: '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2921618501', alt: '', height: '58', width: '185'}
  .new-usersbar
    .new-usersbar-now__box1
      %li.box1
        会員情報
        .new-usersbar__status1
    .new-usersbar-was__box2
      %li.box2 
        電話番号認証
        .new-usersbar__status2
    .new-usersbar-was__box3
      %li.box3 
        お届け先住所
        .new-usersbar__status2
    .new-usersbar-now__box4
      %li.box4 
        支払い方法
        .new-usersbar__status2
    .new-usersbar__box5
      %li.box5 
        完了
        .new-usersbar__status
.new-usersbox
  .new-usersbox__top
    %h3 お支払い方法
  .new-usersbox__down
    = form_with url: pay_card_index_path, method: :post, html: {name: "inputForm"} do |f|
      %label{for: "name1"} カード番号
      %span.form-require 必須
      = f.text_field :card_number, class: "input-default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      .birthbays-form
        %label{for: "name1"} 有効期限
        %span.form-require 必須
        .birthdays-form__down
          = f.select :exp_month, [["--",""],["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-expire'
          %a.birthdays 月
          = f.select :exp_year, [["--",""],["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'input-expire'
          %a.birthdays 年
      %label{for: "name1"} セキュリティーコード
      %span.form-require 必須
      = f.text_field :cvc, class: "input-default", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      %i.fa.fa-question-circle
        = link_to '#' do
          %span.card-nm-what カードの裏面の番号とは？
      .action
        #card_token
        = f.submit "登録する", id: "token_submit"
        .terms-text_down
= render partial: "layouts/single-footer"