.new-header
  = link_to '#' do
    %img.single_pict{src: '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2921618501', alt: '', height: '58', width: '185'}
  .new-usersbar
    .new-usersbar-now__box1
      %li.box1
        会員情報
        .new-usersbar__status1
    .new-usersbar-was__box2
      %li.box2 
        電話番号認証
        .new-usersbar__status2
    .new-usersbar-was__box3
      %li.box3 
        お届け先住所
        .new-usersbar__status2
    .new-usersbar-now__box4
      %li.box4 
        支払い方法
        .new-usersbar__status2
    .new-usersbar__box5
      %li.box5 
        完了
        .new-usersbar__status
.new-usersbox
  .new-usersbox__top
    %h3 お支払い方法
  .new-usersbox__down
    %label{for: "name1"} カード番号
    %span.form-require 必須
    %input.input-default{name: "nickname", placeholder: "半角数字のみ", type: "text", value: ""}/
    .birthbays-form
      %label{for: "name1"} 有効期限
      %span.form-require 必須
      .birthdays-form__down
        = render partial: "layouts/manth"
        %a.birthdays 月
        = render partial: "layouts/years"
        %a.birthdays 年
    %label{for: "name1"} セキュリティーコード
    %span.form-require 必須
    %input.input-default{name: "nickname", placeholder: "カード背面4桁もしくは3桁の番号", type: "text", value: ""}/
    %i.fa.fa-question-circle
      = link_to '#' do
        %span.card-nm-what カードの裏面の番号とは？
    .action
      = f.submit class:"btn-next4"
      %div.btn-back4 前に戻る
      .terms-text_down
= render partial: "layouts/single-footer"