.new-header
  = link_to '#' do
    %img.single_pict{src: '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2921618501', alt: '', height: '58', width: '185'}
  .new-usersbar
    .new-usersbar-now__box1
      %li.box1
        会員情報
        .new-usersbar__status1
    .new-usersbar-was__box2
      %li.box2 
        電話番号認証
        .new-usersbar__status2
    .new-usersbar-now__box3
      %li.box3 
        お届け先住所
        .new-usersbar__status2
    .new-usersbar__box4
      %li.box4 
        支払い方法
        .new-usersbar__status
    .new-usersbar__box5
      %li.box5 
        完了
        .new-usersbar__status
.new-usersbox
  .new-usersbox__top
    %h3 発送元・お届け先住所入力
  .new-usersbox__down
    = f.fields_for :addressee, Addressee.new do |i|
      %label{for: "name1"} お名前
      %span.form-require 必須
      = i.text_field :first_name, autocomplete: "family-name", placeholder: "例）山田", class: "input-default"
      = i.text_field :last_name, autocomplete: "given-name", placeholder: "例）綾", class: "input-default"
      %label{for: "name1"} お名前カナ
      %span.form-require 必須
      = i.text_field :first_name_katakana, autocomplete: "name", placeholder: "例）ヤマダ", class: "input-default"
      = i.text_field :last_name_katakana, autocomplete: "name", placeholder: "例）アヤ", class: "input-default"
      %label{for: "name1"} 郵便番号
      %span.form-require 必須
      = i.text_field :postal_code, autocomplete: "postal-code", placeholder: "例) 123-4567", class: "input-default"
      %label{for: "name1"} 都道府県
      %span.form-require 必須
      .flom-form
        = i.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: '--------'
      %label{for: "name1"} 市区町村
      %span.form-require 必須
      = i.text_field :city, autocomplete: "address-level2", placeholder: "例) 横浜市緑区", class: "input-default"
      %label{for: "name1"} 番地
      %span.form-require 必須
      = i.text_field :address, autocomplete: "street-address", placeholder: "例）青山1-1-1", class: "input-default"
      %label{for: "name1"} 建物名
      %span.form-require 必須
      = i.text_field :building, autocomplete: "street-address", placeholder: "例）柳ビル103", class: "input-default"
      %label{for: "name1"} 電話
      %span.form-require 必須
      = i.telephone_field :phonenumber, autocomplete: "tel", placeholder: "例）09012345678", class: "input-default"
      %div.btn-next3{type: "submit"} 次へ進む
      %div.btn-back3 前に戻る
      .terms-text_down
  = render partial: "layouts/single-footer"