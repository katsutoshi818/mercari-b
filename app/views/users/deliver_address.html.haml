= render partial: 'layouts/header'
.main-deliver_address
  .main-deliver_address-box
    = render partial: 'users/mypage-sidebar'
    .deliver_address-box
      .deliver_address-box__label
        %p　発送元・お届け先住居の変更
      %form.deliver_address-box__information
        .deliver_address-box__information__form
          %label お名前
          %span.span 必須
          %input{type: "text", placeholder: "林"}
          %input{type: "text", placeholder: "克俊"}
        .deliver_address-box__information__form
          %label お名前カナ
          %span.span 必須
          %input{type: "text", placeholder: "ハヤシ"}
          %input{type: "text", placeholder: "カツトシ"}
        .deliver_address-box__information__form
          %label 郵便番号
          %span.span 必須
          %input{type: "text", placeholder: "1234567"}
        .deliver_address-box__information__form
          %label 都道府県
          %span.span 必須
          .deliver_address-box__information__form__wrap
            %select
              %option -----
              %option 北海道
              %option 青森
            %i.fas.fa-chevron-down
        .deliver_address-box__information__form
          %label 市区町村
          %span.span 必須
          %input{type: "text", placeholder: "名古屋市中区"}
        .deliver_address-box__information__form
          %label 番地
          %span.span 必須
          %input{type: "text", placeholder: "栄1-1"}
        .deliver_address-box__information__form
          %label 建物名
          %span 任意
          %input{type: "text", placeholder: "栄ビル３階"}
        .deliver_address-box__information__form
          %label 電話番号
          %span 任意
          %input{type: "text", placeholder: "123-4567-8900"}
        %button.deliver_address-box__information__button{type: "submit"} 変更する
= render partial: 'layouts/footer-top'