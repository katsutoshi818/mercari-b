= render partial: 'layouts/header'
%section.show_product
  %h3.product_name 商品名
  .product_info
    .product_photo
      .photo_stage
        %img.photo_stage__image{ src: asset_path('cat1.png'), alt: "メイン"}
      .photo_list
        .photo_box
          %img.photo_box__image#photo_box__image_light{ "data-url": asset_path('cat1.png'), src: asset_path('cat1.png'), alt: "写真1"}
        .photo_box
          %img.photo_box__image{ "data-url": asset_path('footer.png'), src: asset_path('footer.png'), alt: "写真2"}
        .photo_box
          %img.photo_box__image{ "data-url": asset_path('footer2.png'), src: asset_path('footer2.png'), alt: "写真3"}
        .photo_box
          %img.photo_box__image{ "data-url": asset_path('IMG_0002.jpg'), src: asset_path('IMG_0002.jpg'), alt: "写真4"}
        .photo_box
          %img.photo_box__image{ "data-url": asset_path('header.png'), src: asset_path('header.png'), alt: "写真5"}
        .photo_box
          %img.photo_box__image{ "data-url": asset_path('cat1.png'), src: asset_path('cat1.png'), alt: "写真1"}
        .photo_box
          %img.photo_box__image{ "data-url": asset_path('footer.png'), src: asset_path('footer.png'), alt: "写真2"}
